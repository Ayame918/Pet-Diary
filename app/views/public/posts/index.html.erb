<div class="container">
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-3">
        <p>画像</p>
        <% if post.medias.attached? %>
          <% post.medias.each do |media| %>
            <% if media.content_type.include?('image') %>
              <%= image_tag media, class: "img-fluid" %>
            <% else %>
              <%= video_tag rails_blob_path(media), controls: true, class: "img-fluid" %>
            <% end %>
          <% end %>
        <% else %>
          <%= image_tag 'no_image.jpg', size: "200x200" %>
        <% end %>
        <p>内容</p>
        <span>
            <%=link_to post.post_content, post_path(post.id) %>
        </span>
      </div>
    <% end %>
  </div>
</div>