

<h1>投稿編集</h1>

<%= form_with model: @post do |f| %>

  <h2>画像</h2>
<% if @post.image.attached? %>
  <%= image_tag post.image, size: "200x200" %>
<% elsif @post.video.attached? %>
  <%= image_tag @post.video, size: "200x200" %>
<% else %>
  <%= image_tag 'no_image.png', size: "200x200" %>
<% end %>
  
  <h4>本文</h4>
  <%= f.text_area :post_content %>
  
  <%= f.submit '保存' %>
  
<% end %>