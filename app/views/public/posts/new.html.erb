<div class="container">
  <div class="row">
    <div class="col text-center">
      <h2>投稿</h2>
    </div>
  </div>
  <%= form_with model: @post do |f| %>
    <div class="row">
      <div class="col text-center">
        <p>画像</p>
        <%= f.file_field :medias, accept: ["image/*", "video/*"], multiple: true %>
      </div>
    </div>
    <div class="row">
      <div class="col text-center">
        <p>本文</p>
        <%= f.text_area :post_content %>
      </div>
    </div>
    <div class="row">
      <div class="col text-center">
        <p>本文</p>
        <%= f.text_field :tags, value: @post.tags.pluck(:name) %>
      </div>
    </div>
    <div class="row">
      <div class="col text-center">
        <%= f.submit '投稿' %>
      </div>
    </div>
  <% end %>
</div>
