<div class="container">
  <div class="row justify-content-center">
    <div class="col-5 text-center pt-5">
      <div class="titleD">
        <h2>投稿</h2>
      </div>
    </div>
  </div>
  <%= form_with model: @post do |f| %>
    <div class="row justify-content-center">
      <div class="col-3 form-group mt-5 text-center">
        <p>画像</p>
      </div>
      <div class="col-5 form-group mt-5 ">
        <%= f.file_field :medias, accept: ["image/*", "video/*"], multiple: true %>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-3 form-group mt-5 text-center">
        <p>本文</p>
      </div>
      <div class="col-5 form-group mt-5 ">
        <%= f.text_area :post_content, class:"form-control" %>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-3 form-group mt-5 text-center">
        <p>タグ</p>
      </div>
      <div class="col-5 form-group mt-5 ">
        <%= f.text_field :tags, value: @post.tags.pluck(:name), class:"form-control" %>
      </div>
    </div>
    <div class="form-row justify-content-center">
      <div class="col-3 form-group mt-5">
        <div class="title7">
          <div class="title8">
            <%= f.submit '投稿' ,class:"btn form-control"%>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
