<div class="container">
  <div class="row justify-content-center">
    <div class="col-5 form-group">
      <div class="titleB">
        <h1 class="text-center">
          ログイン
        </h1>
      </div>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: user_session_path) do |f| %>
    <div class="row justify-content-center">
      <div class="col-3 form-group mt-5 text-center">
        <%= f.label "メールアドレス" %>
      </div>
      <div class="col-5 form-group mt-5 ">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-3 form-group mt-5 text-center">
        <%= f.label "パスワード" %>
      </div>
      <div class="col-5 form-group mt-5 ">
        <%= f.password_field :password, autocomplete: "current-password",class:"form-control" %>
      </div>
    </div>
    <div class="form-row justify-content-center">
      <div class="col-3 form-group mt-5">
        <div class="title7">
          <div class="title8">
            <%= f.submit "ログイン",class:"btn form-control"%>
          </div>
        </div>
      </div>
    </div>
     <div class="row justify-content-center">
        <div class="col-6 form-group mt-5 ml-5 justify-content-center">
          <h2 class="text-center">
            新規登録がお済みでない方
          </h2>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-4 form-group mt-1 ml-3 text-center">
          <span class="marker-P-green">
            <%= link_to "新規登録", new_user_registration_path %>
          </span>はこちらから
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-4 form-group mt-1 ml-3 text-center">
          <span class="marker-P-green">
            <%= link_to "ゲストログイン", user_guest_sign_in_path, method: :post %>
          </span>はこちらから
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
