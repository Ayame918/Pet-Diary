<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <h1>Profile Edit</h1>
      <%= form_with model: @user, url: update_user_users_path, method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :profile_image, "プロフィール画像" %>
          <div>
            <%= f.file_field :profile_image %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :name, "名前" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction, "自己紹介" %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        <div class="row">
          <div class="col-md-6 mx-auto">
            <div class="form-group">
              <%= f.submit "変更", class: "btn btn-secondary btn-block" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>