<div class="container">
  <div class=" col">
    <div class ="row d-flex justify-content-center">
      <div class="titleI">
        <h2>お気に入りした投稿</h2>
      </div>
    </div>
    <div class="mt-3 pt-5">
      <div class="box1">
        <div class="row d-flex pt-3 pl-1">
         <% @bookmarks.each do |bookmark| %>
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="text-center p-3">
                  <%= link_to post_path(bookmark.post) do %>
                    <%= bookmark.post.user.name %>
                  <% end %>
                </div>
                <div class="text-center pb-4">
                  <%= link_to post_path(bookmark.post) do %>
                    <%= bookmark.post.post_content %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>