<div class="container mt-5 pt-5">
  <div class="row d-flex justify-content-center">
    <div class="col-5 form-group">
      <div class="titleA">
        <h1 class="text-center">
          新規登録
        </h1>
      </div>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
    <div class="row justify-content-center">
      <div class="col-3 form-group mt-5 text-center">
        <%= f.label "ユーザー名" %>
      </div>
      <div class="col-5 form-group mt-5 ">
        <%= f.email_field :name, autofocus: true, autocomplete: "email", class:"form-control" %>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-3 form-group mt-5 text-center">
        <%= f.label "メールアドレス" %>
      </div>
      <div class="col-5 form-group mt-5 ">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-3 form-group mt-5 text-center">
        <%= f.label "パスワード" %><br>
        <% if @minimum_password_length %>
        <em>(最小文字数は<%= @minimum_password_length %>字です)</em>
        <% end %>
      </div>
      <div class="col-5 form-group mt-5 justify-content-center">
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-3 form-group mt-5 text-center">
        <%= f.label "確認パスワード" %>
      </div>
      <div class="col-5 form-group mt-5 justify-content-center">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
      </div>
    </div>
      <div class="form-row justify-content-center">
        <div class="col-3 form-group mt-5 justify-content-center">
          <div class="title7">
            <div class="title8">
              <%= f.submit "登録する", class:"btn form-control"%>
            </div>
          </div>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-6 form-group mt-5 ml-5 justify-content-center">
          <h2 class="text-center">
            既に会員済みの方
          </h2>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-4 form-group mt-1 ml-3 text-center">
          <span class="marker-P-green">
            <%= link_to "ログイン", new_user_session_path %>
          </span>はこちらから
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-4 form-group mt-1 ml-3 text-center">
          <span class="marker-P-green">
            <%= link_to "ゲストログイン", user_guest_sign_in_path, method: :post %>
          </span>はこちらから
        </div>
      </div>
    </div>
  <% end %>
</div>