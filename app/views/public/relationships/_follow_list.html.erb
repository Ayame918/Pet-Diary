<div class="container">
  <div class="row justify-content-center">
    <div class="col-6 text-center pt-3">
      <div class="titleJ">
        <h1>フォロー・フォロワー</h1>
      </div>
    </div>
  </div>
  <div class="box1">
    <div class="row">
      <% if users.exists? %>
        <% users.each do |user| %>
          <div class="col-md-3 p-5">
            <div class="card ">
              <div class=" text-center pt-3">
                <%= link_to user_path(user) do %>
                  <%= image_tag user.get_profile_image(200,200), class: "img-fluid" %>
                <% end %>
              </div>
              <div class=" text-center pt-3">
                <%=link_to user.name, user_path(user) %>
              </div>
              <div class=" text-center">
                <div class="col">
                  フォロー: <%= user.followings.count %>人
                </div>
                <div class="col">
                  フォロワー: <%= user.followers.count %>人
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <% else %>
        <div class=" text-center">
          <p>ユーザーはいません</p>
        </div>
      <% end %>
    </div>
  </div>
</div>