<div class="container">
  <div class="row">
    <div class="titleK">
      <h1><%= @tag.name %></h1>
    </div>
  </div>
  <div class="row pt-5">
    <% @tag.posts.each do |post| %>
      <div class="col-md-4 mb-3">
        <div class="card">
          <div class="card-body">
            <%= link_to post.post_content.truncate(20), admin_post_path(post) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <%= link_to admin_tag_path(@tag), method: :delete, "data-confirm" => "タグを削除しますか？" do %>
    <i class="fa-solid fa-trash-can"></i>削除
    <% end %>
  </div>
</div>