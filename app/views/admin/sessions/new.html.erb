<div class="container">
  <div class="row justify-content-center">
    <div class="col-5 form-group">
      <div class="titleC">
        <h1 class="text-center">
          管理者ログイン
        </h1>
      </div>
    </div>
  </div>
  <%= form_with(model: resource, local: true, url: session_path(resource_name)) do |f| %>
    <div class="row justify-content-center">
      <div class="col-3 form-group mt-5 text-center">
        <%= f.label "メールアドレス" %>
      </div>
      <div class="col-5 form-group mt-5 ">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-3 form-group mt-5 text-center">
        <%= f.label "パスワード" %>
      </div>
      <div class="col-5 form-group mt-5 ">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>
    </div>
      <div class="row justify-content-center">
        <div class="col-3 form-group mt-5">
          <div class="title7">
            <div class="title8">
              <%= f.submit "ログイン",class:"btn form-control"%>
            </div>
          </div>
        </div>
      </div>
  <% end %>
</div>