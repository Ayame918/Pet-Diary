<div class="container">
  <div class="row">
    <div class="fixed-top p-2">
      <div class="d-flex content-between align-items-center md-4 ">
        <div class="btn-group">
          <%#= link_to root_path, class: "btn font-bold", class: "header-logo" do %>
            <%#= image_tag '002.png', size: '100x40' %>
          <%# end %>
        </div>
        <div class="btn-group ml-auto">
          <nav class="d-flex align-items-center">
            <ul class="navbar-nav list-group-horizontal ">
              <% if user_signed_in? %>
                <div class="search_form mr-2">
                  <%#= render 'user/items/serach' %>
                </div>
                  <li class="nav-item">
                    <%= link_to "マイページ", users_path, class: "btn font-bold "%>
                  </li>
                  <li class="nav-item">
                      <%= link_to "投稿一覧", posts_path, class: "btn font-bold "%>
                  </li>
                  <li class="nav-item">
                    <%#= link_to "タグ", tags_path, class: "btn font-bold "%>
                  </li>
                  <li class="nav-item">
                    <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn font-bold "%>
                  </li>

              <% elsif admin_signed_in? %>
                <% if user_signed_in? && current_user.present? %>
                  <div class="text-warning ml-4 mt-2">
                    <%#= "ようこそ、#{current_user.family_name}さん！" %>
                  </div>
                <% end %>
                  <li class="nav-item">
                    <%#= link_to "商品一覧", admin_items_path, class: "btn font-bold ", style: " color: #48120E;"%>
                  </li>
                  <li class="nav-item">
                    <%= link_to "ユーザー一覧", admin_users_path, class: "btn font-bold "%>
                  </li>
                  <li class="nav-item">
                    <%= link_to "投稿履歴一覧", admin_root_path, class: "btn font-bold "%>
                  </li>
                  <li class="nav-item">
                    <%= link_to "タグ一覧", tags_path, class: "btn font-bold "%>
                  </li>
                  <li class="nav-item">
                    <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn font-bold "%>
                  </li>
              <% else %>
                <div class="search_form mr-2">
                  <%#= render 'user/items/serach' %>
                </div>
                  <li class="nav-item">
                    <%#= link_to "商品一覧", items_path, class: "btn font-bold"%>
                  </li>
                  <li class="nav-item">
                    <%= link_to "新規登録", new_user_registration_path, class: "btn font-bold"%>
                  </li>
                  <li class="nav-item">
                    <%= link_to "ログイン", new_user_session_path, class: "btn font-bold"%>
                  </li>
              <% end %>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>
